#!/bin/sh /etc/rc.common
START=99
STOP=10
USE_PROCD=1

start() {
    echo "[drcom_client] 启动 drcom_client ..."
    procd_open_instance
    procd_set_param command /usr/bin/drcom_client
    procd_set_param chdir /etc/drcom
    procd_set_param respawn
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_close_instance
}

restart() {
    echo "[drcom_client] 重启 drcom_client ..."
    killall drcom_client 2>/dev/null
    procd_open_instance
    procd_set_param command /usr/bin/drcom_client
    procd_set_param chdir /etc/drcom
    procd_set_param respawn
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_close_instance
}

stop() {
    echo "[drcom_client] 停止 drcom_client ..."
    killall drcom_client 2>/dev/null
}
